{
    "id": "org.kde.kalk",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kalk",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "intltool",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://launchpad.net/intltool/trunk/0.51.0/+download/intltool-0.51.0.tar.gz",
                    "sha256": "67c74d94196b153b774ab9f89b2fa6c6ba79352407037c8c14d5aeb334e959cd",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1385,
                        "stable-only": true,
                        "url-template": "https://launchpad.net/intltool/trunk/$version/+download/intltool-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "mpfr",
            "buildsystem": "autotools",
            "config-opts": [
                "--enable-static",
                "--disable-shared",
                "CFLAGS=-fPIC"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.inria.fr/mpfr/mpfr.git",
                    "tag": "4.2.1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 2019,
                        "stable-only": true,
                        "tag-template": "$version"
                    },
                    "commit": "53b7b847c406376b10cdd0ddcd46482dbd715363"
                }
            ]
        },
        {
            "name": "libqalculate",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Qalculate/libqalculate/releases/download/v5.5.2/libqalculate-5.5.2.tar.gz",
                    "sha256": "fc14d4527dccfc9189684b9fcd64d78aa67ae5383012c66e1596b2531f5daef1",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 230126,
                        "stable-only": true,
                        "url-template": "https://github.com/Qalculate/libqalculate/releases/download/v$version/libqalculate-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kalk",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
